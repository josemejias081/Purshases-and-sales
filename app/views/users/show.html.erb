<section class="container">
  <div class="row align-item-center justify-content-center mt-5" >
    <h2>Código de Cliente: <%= @user.id %></h2>
    <p style="color: green"><%= notice %></p>
    <div class="card" style="width: 36rem;">
      <div class="card-header text-center bg-info m-3">
          <img class="img-thumbnail" src="data:image/jpeg;base64," alt="" width="50" height="50" >
        <h5 class="card-title text-white non-bg"><%= @user.name %></h5>
      </div>
      <div class="card-body">
        <ul class="list-group list-group-flush">
          <li class="list-group-item">Correo Electrónico: <%= @user.email %></li>
          <li class="list-group-item">Dirección: <%= @user.address %></li>
          <li class="list-group-item">Teléfono: <%= @user.phone %></li>
          <li class="list-group-item">Rol: <%= @user.role %></li>
          <% @user.businesses.each do |business|%>
            <li class="list-group-item">Negocio: <%= business.name %></li>
          <% end %>
          <% if @user.active %>
            <li class="list-group-item">Estatus: <span class="text-success fw-bold">Activo</span> </li>
          <% else %>
            <li class="list-group-item">Estatus: <span class="text-danger fw-bold">Inactivo</span></li>  
          <% end %>
          <li class="list-group-item">Fecha de registro: <%= I18n.l(@user.created_at, format: '%d/%m/%Y') %></li>
        </ul>
      </div>
      <div class="card-footer">
        <%= link_to "Editar", edit_user_path(@user), class: "card-link" %>
        <%= link_to "Volver", users_path, class: "card-link" %>
        <%= link_to "Eliminar", @user, data: {turbo_method: :delete}, class: "card-link" %>
      </div>
    </div>
  </div>
</section>
