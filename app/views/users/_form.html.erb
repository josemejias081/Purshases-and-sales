<section class="background-radial-gradient overflow-hidden">
  <div class="container px-4 py-5 px-md-5 text-center text-lg-start my-5">
    <div class="row gx-lg-5 align-items-center mb-5">
      <div class="col-lg-6 mb-5 mb-lg-0" style="z-index: 10">
        <h1 class="my-5 display-5 fw-bold ls-tight title-one">
          Hola! <br />
          <span class="title-span">Bienvenido</span>
        </h1>
        <p class="mb-4 opacity-70 paragraf">
          Espero que este nuevo cliente se mantenga por mucho tiempo con nosotros
        </p>
        <p class="mb-4 opacity-70 paragraf">
          Vamos a darle un servicio de calidad
        </p>
      </div>

      <div class="col-lg-6 mb-5 mb-lg-0 position-relative">
        <div id="radius-shape-1" class="position-absolute rounded-circle shadow-5-strong"></div>
        <div id="radius-shape-2" class="position-absolute shadow-5-strong"></div>

        <div class="card bg-glass">
          <div class="card-body px-4 py-5 px-md-5">

          <div class="text-center">
            <img class="rounded-circle img-form" src="../logo-links.jpg" width="150px" height="150px" alt="">
          </div>
          <h2 class="fw-bold text-center pt-2 mb-5">Registrar Cliente</h2>
            <%= form_for @user do |f| %>
            <% if @user.errors.any? %>
              <div style="color: red">
                <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
                <ul>
                  <% @user.errors.each do |error| %>
                    <li><%= error.full_message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
              <!-- Email input -->
              <div class="form-outline mb-4">
                <%= f.text_field :name, autofocus: true, placeholder: "Nombre y Apellido",class: 'form-control' %>
              </div>
              <!-- Email input -->
              <div class="form-outline mb-4">
                <%= f.text_field :address, autofocus: true, placeholder: "Direccion",class: 'form-control' %>
              </div>

              <!-- Password input -->
              <div class="form-outline mb-4">
                <%= f.text_field :phone, autofocus: true, placeholder: "Num. telefónico",class: 'form-control' %>
              </div>

              <!-- Password input -->
              <div class="form-outline mb-4">
                <%= f.email_field :email, autofocus: true, placeholder: "Correo Electrónico",class: 'form-control' %>
              </div>

              <!-- Password input -->
              <div class="form-outline mb-4">
                <%= f.select( :role, User.roles.keys, {class: "form-control "}) %>
              </div>

               <%# if current_user.is_superadmin? %>
        <div class="form-group mb-4">
          <label>Empresa</label><br>
          <%# f.collection_select(:businesses, @business, :id, :business) %>         
        </div>
      <%# else %>
        <%# f.hidden_field :company_id, value: current_user.company.id%>
      <%# end %>


      <div class="col-md-6 form-group">
        <label>Negocios</label><br>
        <div class="text-dark">
          <%# collection_select(:user, :business_id, businesses, :ids, :name, {:prompt => 'Seleccione un negocio'}, { class: "form-control" })%>
          <%# f.select(:business_ids, Business.find(:all).collect {|u| [u.name, u.ids]}, :prompt => 'Select') %>
          <%= select(@user, @business_id, Business.all.collect {|p| [ p.name, p.id ] }, {}) %>
        </div>
      </div>


              <!-- Checkbox -->
              <div class="form-group form-check form-switch mb-4">
                <%= f.label "Activo / Inactivo", class: "form-check-label" %>
                <%= f.check_box :active, class: "form-check-input", placeholder: "" %>
              </div>

              <!-- Password input -->
              <div class="form-outline mb-4">
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> caracteres mínimos)</em>
                <% end %><br />
                <%= f.password_field :password, placeholder: "Clave",class: 'form-control' %>
              </div>

              <!-- Password input -->
              <div class="form-outline mb-4">
                <%= f.password_field :password_confirmation, placeholder: "Confirmar Clave",class: 'form-control' %>
              </div>

              <!-- Submit button -->
             <div class="actions d-grid">
              <%= f.submit "Registrar", class: " btn btn-primary btn-sm mt-3" %>
             </div>
            <% end %>
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
