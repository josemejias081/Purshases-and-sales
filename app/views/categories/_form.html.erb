<section class="background-radial-gradient overflow-hidden">
  <div class="container-fluid h-custom">
    <div class="row d-flex justify-content-center align-items-center h-100 mt-5">
      <div class="col-md-9 col-lg-6 col-xl-5 p-5">
        <h1 class="text-white">New Category</h1>
        <img src="../c-p-s-b.png"
          class="img-fluid drop" alt="Sample image">
      </div>
      <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1 text-white">
        
          <%= form_with(model: category) do |form| %>
            <% if category.errors.any? %>
              <div style="color: red">
                <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>
                <ul>
                  <% category.errors.each do |error| %>
                    <li><%= error.full_message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
          <div class="form-outline mb-4">
            <%= form.label :Foto, style: "form-label" %>
            <%= form.file_field :photo, class: "form-control form-control-lg" %>
          </div>
          
          <div class="form-outline mb-4">
            <%= form.label :Icono, style: "form-label" %>
            <%= form.text_field :icon, class: "form-control form-control-lg" %>
          </div>

          <div class="form-outline mb-4">
            <%= form.label :Nombre, style: "form-label" %>
            <%= form.text_field :name, class: "form-control form-control-lg" %>
          </div>

          <div class="form-outline mb-4">
            <%= form.label :Description, style: "form-label" %>
            <%= form.text_field :description, class: "form-control form-control-lg" %>
          </div>

          <div class="row">
            <div class="col form-check form-switch mt-3 mx-3">
              <%= form.label "Marcar como destacada", class: "form-check-label" %>
              <%= form.check_box :featured, class: "form-check-input", placeholder: "" %>
            </div>
          </div>

          <div class="text-center text-lg-start my-4 pt-2">
            <%= form.submit "Guardar", class: "btn btn-primary btn-sm" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div
    class="d-flex flex-column flex-md-row text-center text-md-start justify-content-between py-2 px-4 px-xl-5 bg-primary">
    <!-- Copyright -->
    <div class="text-white mb-3 mb-md-0">
      <%= link_to "Back to categories", categories_path, class: "text-white" %>
    </div>
  </div>
</section>
